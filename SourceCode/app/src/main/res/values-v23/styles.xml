<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="android:windowBackground">@color/colorPrimaryy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:statusBarColor">#FFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="UpdateAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="android:windowBackground">@color/colorPrimaryy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SplashAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:windowBackground">@drawable/splash_window_bg</item>
    </style>

    <style name="LoginAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="android:windowBackground">@color/colorPrimaryy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>